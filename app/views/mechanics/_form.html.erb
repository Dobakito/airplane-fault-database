<%= simple_form_for @mechanic do |f| %>
  <%= f.input :name, error: 'Must provide a name'%>
  <%= f.input :email, error: 'Must provide an email address' %>
  <%= f.input :password, error: 'Must create a passoword' %>
  <%= f.input :position, error: 'Please input your position'%>
  <%= f.input :years_experience %>
  <%= f.button :submit %>
<% end %>
